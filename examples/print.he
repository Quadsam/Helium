// A helper function to print a string
// Takes a string pointer and a length
fn print(msg: ptr, len: int) {
	// Syscall 1 = WRITE (fd=1, msg, len)
	syscall(1, 1, msg, len);
}

fn main() {
	print("Hello from Helium!\n", 19);
	print("This is a function call.\n", 25);
	
	// Manual exit is required with ld linkage
	syscall(60, 0);
}
