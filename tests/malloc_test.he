#include "lib/std.he"

struct Point {
	x: int,
	y: int
}

fn main()
{
	print("=== Malloc Test ===\n");

	// Allocate using sizeof(Point) - which is 16
	// Note: We don't have 'sizeof' keyword yet, so hardcode 16
	Point p = malloc(16);

	// Clean Syntax!
	p->x = 42;
	p->y = 100;

	print("x: "); print_int(p->x); print("\n");
	print("y: "); print_int(p->y); print("\n");

	free(p);
	return 0;
}
